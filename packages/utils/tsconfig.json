{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
